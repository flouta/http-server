server{

	server_name name;

	listen host:port;

	error_page 404 /error_page.html;

	client_body_size_max 100;

	location / {

		allow_methods GET POST DELETE;

		redirect 301 /redirect.html; 

		root /path/to/dir;
		
		autoindex off;

		default /default.html;

		cgi .py /bin/python3;

		upload /path/to/upload;

	}

}
